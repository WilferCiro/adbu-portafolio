---
import { workList } from "../../../data/work";
import DatesArray from "../atoms/DatesArray.astro";
---

<section>
  <h2>Mi experiencia laboral</h2>

  <div class="project-list">
    {
      workList.map((project) => {
        return (
          <a href="/project">
            <div class="project">
              <img
                src="/img/projects.jpeg"
                alt="Proyecto X"
                transition:name="project1-image"
              />
              <div class="project-body">
                <div>
                  <header transition:name="project1-title">
                    {project.position.es}
                  </header>
                  <footer>{project.company.name}</footer>
                </div>
                <div class="date" transition:name="project1-date">
                  <DatesArray dates={project.dates} />
                </div>
              </div>
            </div>
          </a>
        );
      })
    }
  </div>
</section>

<style>
  h2 {
    color: var(--primary-color);
  }

  .project-list {
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .project {
    position: relative;
    display: flex;
    gap: 10px;
    align-items: center;
    padding: 10px 10px;
    border-bottom: 0.5px solid var(--border-color);
  }
  .project:hover {
    background-color: var(--bg-color2);
    cursor: pointer;
  }
  .project img {
    border-radius: 100%;
    width: 60px;
    height: 60px;
  }
  .project header {
    font-weight: 600;
    color: var(--text-color1);
    margin-bottom: 2px;
    font-size: medium;
  }
  .project footer {
    color: var(--text-color3);
    font-size: medium;
  }
  .project-body {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    padding: 12px 0px;
  }
  .date {
    font-size: small;
    color: var(--text-color3);
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 4px;
    text-align: right;
    width: 39%;
  }
  .date label {
    background-color: var(--primary-color);
    border-radius: var(--border-radius);
    display: block;
    color: white;
    width: fit-content;
    padding: 3px 5px;
  }
  .date-active {
    color: var(--primary-color);
    font-weight: bold;
  }
</style>
