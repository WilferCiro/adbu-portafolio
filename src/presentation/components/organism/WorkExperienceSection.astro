---
import { workList } from "../../../data/work";
import DatesArray from "../atoms/DatesArray.astro";
---

<section>
  <h2>Mi experiencia laboral</h2>

  <div class="project-list">
    <div>
      <div class="principal-project">
        <img
          src={`/img/works/${workList[0].company.image}`}
          alt="Proyecto X"
          transition:name="project-p-image"
        />
        <header transition:name="project-p-title">
          {workList[0].position.es}
        </header>
        <footer>{workList[0].company.name}</footer>
        <DatesArray dates={workList[0].dates} />
      </div>
    </div>
    <div>
      {
        workList.slice(1).map((project, index) => {
          return (
            <a href="/work">
              <div class="project">
                <img
                  src={`/img/works/${project.company.image}`}
                  alt="Proyecto X"
                  transition:name={`project${index}-image`}
                />
                <div class="project-body">
                  <div>
                    <header transition:name={`project${index}-title`}>
                      {project.position.es}
                    </header>
                    <footer>{project.company.name}</footer>
                  </div>
                  <div class="date" transition:name={`project${index}-date`}>
                    <DatesArray dates={project.dates} />
                  </div>
                </div>
              </div>
            </a>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  section {
    max-width: calc(2 * var(--max-width));
    margin: auto;
    height: 100vh;
  }
  h2 {
    color: var(--primary-color);
  }

  .project-list {
    width: 100%;
    display: grid;
    grid-template-columns: 0.8fr 1fr;
  }

  .project {
    position: relative;
    display: flex;
    gap: 10px;
    align-items: center;
    padding: 10px 10px;
    border-bottom: 0.5px solid var(--border-color);
  }
  .project:hover {
    background-color: var(--bg-color2);
    cursor: pointer;
  }
  .project img {
    border-radius: 100%;
    width: 60px;
    height: 60px;
  }
  .project header {
    font-weight: 600;
    color: var(--text-color1);
    margin-bottom: 2px;
    font-size: medium;
  }
  .project footer {
    color: var(--text-color3);
    font-size: medium;
  }
  .project-body {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    padding: 12px 0px;
  }
  .date {
    font-size: small;
    color: var(--text-color3);
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 4px;
    text-align: right;
    width: 39%;
  }
  .date label {
    background-color: var(--primary-color);
    border-radius: var(--border-radius);
    display: block;
    color: white;
    width: fit-content;
    padding: 3px 5px;
  }
  .date-active {
    color: var(--primary-color);
    font-weight: bold;
  }

  .principal-project {
    width: 100%;
  }
  .principal-project img {
    width: 250px;
    height: 250px;
    border-radius: 100%;
  }
</style>
